                <span asp-validation-for="senha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="logradouro" class="control-label">Rua:</label>
                <input asp-for="logradouro" class="form-control" />
                <span asp-validation-for="logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="num_logradouro" class="control-label">Número:</label>
                <input asp-for="num_logradouro" class="form-control" />
                <span asp-validation-for="num_logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="estado" class="control-label">UF:</label>
                <input asp-for="estado" class="form-control" />
                <span asp-validation-for="estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cidade" class="control-label">Cidade:</label>
                <input asp-for="cidade" class="form-control" />
                <span asp-validation-for="cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="tel_empresa" class="control-label">Contato Empresa:</label>
                <input type="tel" asp-for="tel_empresa" class="form-control" />
                <span asp-validation-for="tel_empresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="celular" class="control-label">Celular:</label>
                <input type="tel" asp-for="celular" class="form-control" />
                <span asp-validation-for="celular" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="whats" class="control-label">Whatsapp:</label>
                <input type="tel" asp-for="whats" class="form-control" />
                <span asp-validation-for="whats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-secondary btn-save text-bnt" />
            </div>
        </form>
    </div>
